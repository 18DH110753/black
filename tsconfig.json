{
  "compilerOptions": {
    "module": "esnext",
    "target": "es5",
    "lib": ["es5","dom"],
    "allowJs": true,
    "jsx": "react",
    "declaration": true,
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "src",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noEmit": false
  },
  "exclude": [
    "node_modules"
  ],
  "include": ["src"]
}
